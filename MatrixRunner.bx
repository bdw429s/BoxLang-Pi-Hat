class {

  function main( Array args ){
    try {
      animation=""
      if( len( args ) ) {
        animation = args[1]
      }
      oMatrix = new Matrix( animation )
    
      while( true ) 
        oMatrix.run()
        
    } finally {
      if( !isNull( oMatrix ) ) {
        oMatrix.shutdown()
      }
    }
  }

}